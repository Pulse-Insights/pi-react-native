{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-native"
  },
  "include": ["src/sdk/**/*", "specs/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "lib",
    "ios",
    "android",
    "App.tsx",
    "src/screens/**/*",
    "src/components/**/*"
  ]
}
